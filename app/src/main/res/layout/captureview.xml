<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/code_layout"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/border_code"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_item_textView_vnum1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_history_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="I"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"/>

        <TextView
            android:id="@+id/history_item_textView_vnum2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/border_history_number"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="N"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"/>

        <TextView
            android:id="@+id/history_item_textView_vnum3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_history_number"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="C"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"/>

        <TextView
            android:id="@+id/history_item_textView_vnum4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/border_history_number"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="D"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"/>

    </RelativeLayout>
</LinearLayout>
