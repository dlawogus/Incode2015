<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6EE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#19BDC4">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/backbtn"/>

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_back"
            android:layout_marginLeft="15dp"
            android:text="최근사용목록"
            android:textSize="18sp"
            android:textColor="#fff"/>


        <ImageButton
            android:id="@+id/history_btn_gong"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/history_share"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/history_btn_del"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/history_delete"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/history_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:dividerHeight="10dp"
        android:divider="#FFF6EE"
        android:visibility="gone"
        android:background="#FFF6EE">

    </ListView>

    <RelativeLayout
        android:id="@+id/history_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/history_empty"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/share_code_layout"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/border_code"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        android:padding="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_textView_vnum1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_history_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="I"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"/>

        <TextView
            android:id="@+id/share_textView_vnum2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/border_history_number"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="N"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"/>

        <TextView
            android:id="@+id/share_textView_vnum3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_history_number"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="C"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"/>

        <TextView
            android:id="@+id/share_textView_vnum4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/border_history_number"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="D"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="21dp"/>

    </RelativeLayout>

</LinearLayout>