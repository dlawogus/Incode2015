<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_item"
    android:layout_width="wrap_content" 
    android:layout_height="60dp">

    <!--리스트 맨위-->
    <RelativeLayout
        android:id="@+id/drawer_layout_item_1"
        android:layout_width="match_parent"
        android:background="#19BDC4"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/drawer_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:text=""/>

        <ImageView
            android:id="@+id/drawer_id_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:src="@drawable/setting" />

        <ImageView
            android:id="@+id/drawer_id_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:src="@drawable/drawer_logo" />

    </RelativeLayout>

    <!--리스트 두번째 섹션-->
    <RelativeLayout
        android:id="@+id/drawer_layout_item_2"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <ImageView
            android:id="@+id/drawer_imageview_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/drawer_menutext_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/drawer_imageview_2"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="레이아웃1"/>

        <View
            android:id="@+id/drawer_border"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp"
            android:background="#ddd"/>

    </RelativeLayout>

    <!--리스트 세번째 섹션-->
    <RelativeLayout
        android:id="@+id/drawer_layout_item_3"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/drawer_menutext_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="레이아웃2"/>

        <ImageView
            android:id="@+id/drawer_imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/drawer5" />

        <TextView
            android:id="@+id/drawer_menutext_3_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:text="v 1.1.0"/>

    </RelativeLayout>

</RelativeLayout>