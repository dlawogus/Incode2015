<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#19BDC4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/slide_scroll_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/slide_scroll_1"/>

        <ImageView
            android:id="@+id/slide_scroll_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/slide_scroll"/>

        <ImageView
            android:id="@+id/slide_scroll_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/slide_scroll"/>

        <ImageView
            android:id="@+id/slide_scroll_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/slide_scroll"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="wrap_content"
        android:layout_height="365dp" />

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/closebtn"/>

</LinearLayout>